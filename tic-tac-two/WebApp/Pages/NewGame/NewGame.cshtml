@page
@model WebApp.Pages.NewGame.NewGame

<h1>New Game</h1>

<p>Player X starts the game!</p>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConfigName" class="control-label"></label>
                <select asp-for="ConfigName" class="form-select" asp-items="Model.ConfigSelectList"></select>
            </div>

            <div class="form-group">
                <label for="numAIs">Play as X or O:</label>
                <select asp-for="PlayerXorO" id="numAIs" class="form-select">
                    <option value="X">Player X</option>
                    <option value="O">Player O</option>
                </select>
            </div>

            <div class="form-group">
                <label for="numAIs">Number of AIs:</label>
                <select asp-for="NumberOfAIs" id="numAIs" class="form-select">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
            </div>

            <p></p>

            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

